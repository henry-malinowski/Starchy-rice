! ~/.Xresources
! vim:set foldmethod=expr foldexpr=getline(v\:lnum)=~'^!##'?'>1'\:'=':
! these settings are subject to taste and that the monitor is 15.6 inches diagonally

!## Xft settings / Font clarity settings
Xft.antialias: true
Xft.hintstyle: hintslight
Xft.rgba: rgb
#ifdef WIDTH 
    /// HP Pavilion
    #if (WIDTH == 1366)
        Xft.dpi: 100
    #endif

    /// HP Envy
    #if (WIDTH == 1920)
!        Xft.dpi: 141
! windows are too big
        Xft.dpi: 96
    #endif
#else
    #pragma message ( "Could not detect resolution for setting dpi" )
    Xft.dpi: 96
#endif


!## Attempting to fix PowerLine fonts
!URxvt.letterSpace: 1
URxvt.utf8: true
URxvt.skipBuiltinGlyphs: true

!## disable scrollbar
URxvt.scrollBar: false 

!## Aci color scheme 
! foreground/background
URxvt*background: #0d1926
URxvt*foreground: #B4E1FD
*cursorColor    : #D9E6F2
! black
URxvt.color0    : #363636
URxvt.color8    : #424242
! red
URxvt.color1    : #FF0883
URxvt.color9    : #FF1E8E
! green
URxvt.color2    : #83FF08
URxvt.color10   : #8EFF33
! yellow
URxvt.color3    : #FF8308
URxvt.color11   : #FF8E1E
! blue
URxvt.color4    : #0883FF
URxvt.color12   : #1E8EFF
! magenta
URxvt.color5    : #8308FF
URxvt.color13   : #8E1EFF
! cyan
URxvt.color6    : #08FF83
URxvt.color14   : #1EFF8E
! white
URxvt.color7    : #B6B6B6
URxvt.color15   : #C2C2C2

!## Font selection

#ifdef WIDTH 
    /// HP Pavilion
    #if (WIDTH == 1366)
        URxvt.font:     xft:FiraMono-Regular Powerline:style=Regular:pixelsize=11
        URxvt.boldFont: xft:FiraMono-Bold Powerline:style=Bold:pixelsize=11
    #endif

    /// HP Envy
    #if (WIDTH == 1920)
        URxvt.font:     xft:FiraMono-Regular Powerline:style=Regular:pixelsize=14
        URxvt.boldFont: xft:FiraMono-Bold Powerline:style=Bold:pixelsize=14
    #endif
#else
    #pragma message ( "Could not detect resolution for Font selection" )
!    URxvt.font:     xft:FiraMono-Regular Powerline:style=Regular:pixelsize=12
!    URxvt.boldFont: xft:FiraMono-Bold Powerline:style=Bold:pixelsize=12
#endif

 

